<?xml version="1.0" encoding="UTF-8" ?>
<serializer>
    <class name="Tastd\Bundle\CoreBundle\Entity\Credential" exclusion-policy="all" >
        <property name="id" expose="true" groups="AUTH,MIN,CREATE,EDIT" />
        <property name="token" expose="true" groups="AUTH,MIN,CREATE,EDIT" />
        <property name="permissions" max-depth="3" type="array" expose="true" groups="AUTH,MIN,CREATE,EDIT" />
        <property name="provider" expose="true" groups="AUTH,MIN,CREATE,EDIT" />
        <property name="externalId" expose="true" groups="AUTH,MIN,BASE,CREATE,EDIT" serialized-name="externalId" />
        <property name="created" expose="true" groups="FULL"  />
        <property name="updated" expose="true" groups="FULL" />
    </class>
</serializer>